"use client";

import Link from "next/link";
import { ButtonHTMLAttributes, DetailedHTMLProps } from "react";

interface ButtonProps extends DetailedHTMLProps<ButtonHTMLAttributes<HTMLButtonElement>, HTMLButtonElement> {
  href?: string;
  children: React.ReactNode;
}

/**
 * A reusable Button component.
 * - If `href` is provided, it renders as a Next.js Link (anchor tag) for navigation.
 * - Otherwise, it renders as a regular HTML button (you can attach onClick handlers to it).
 */
export default function Button({ href, children, ...props }: ButtonProps) {
  const baseClasses =
    "inline-block bg-yellow-500 text-black font-semibold py-2 px-4 rounded hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-offset-2 transition";
  
  if (href) {
    // Render as a link for navigation
    return (
      <Link href={href} className={baseClasses}>
        {children}
      </Link>
    );
  }
  
  // Render as a standard button
  return (
    <button className={baseClasses} {...props}>
      {children}
    </button>
  );
}
